{{# courses_view_count}}
<div  class="userdashboard_content" >
    <div id="{{{subtab}}}" class="tab-pane divslider active active_subtab">
    <div class="userdashboard_content userdashboard_ctype_elearning d-flex flex-row flex-{{#enableflow}}no{{/enableflow}}wrap">
        {{# moduledetails}}
            <div class="col-sm-6 col-12 pull-left tabs_cmn_class courses_inprogress_slide {{{subtab}}} {{indexClass}} ctype_elearning d-flex" data-index="{{index}}">
                <div class="course_container pull-left w-100">
                    <div class="courseimg_container col-md-5 col-12 pull-left">
                        <div alt="{{course_fullname}}" class="courseimg courseimg_bg" style="background-image:url('{{course_image_url}}')"> </div>

                    </div>
                    <div class="col-md-7 col-12 pull-left coursecontent">
                       
                         <!--  <div class="course_name">
                             <a href="{{{course_url}}}" title="{{{course_fullname}}}"> {{course_fullname}}</a>
                         </div> 
 -->
                         <div class = "course_name">
                            <h5> {{{ course_url }}}</h5>
                         </div> 
                        
                 
                        {{# summary}}
                            <div class="desc coursedesc">{{{coursesummary}}}</div>
                        {{/ summary}}
                        {{^ summary}}
                            <div class="alert lert-info">{{#str}}nocoursedesc, block_userdashboard{{/str}}</div>
                        {{/ summary}}

                        <!--<div class="w-full pull-left progress-container">-->
                            <div class="w-full pull-left progress">
                                <div class="progress-bar" role="progressbar" style="width: {{progress}}%" aria-valuenow="{{{progress}}}" aria-valuemin="0" aria-valuemax="100">{{progress}}%</div>
                            </div>
                        <!--</div>-->
                        <div class="w-full pull-left mt-10 {{#rating_element}}w-full d-flex align-items-end justify-content-between flex-row flex-wrap{{/rating_element}}">
                        <div class="pull-left">{{{rating_element}}}
                               
                                {{# element_tags}}
                                <a href="javascript:void(0);" class="w-full text-left pl-md-1 mt-2 show_suggested_modules" title="{{#str}}suggcourses, block_userdashboard{{/str}}" data-moduletype = "local_courses" data-show_suggestions = 0 data-tags = '{{element_tags}}' >{{#str}}sugcourses, block_userdashboard{{/str}}</a>
                                {{/ element_tags}}
                                
                         </div>
                            <div class="pull-right text-right launch_container">
                                <div class="pull-right mt-10">
                               <!--   <a href="{{{course_url}}}">
                                    <button class="btn btn-primary launch_btn">{{#str}}launch, block_userdashboard{{/str}}</button>
                                </a>  -->
                                
                                </div>
                                <div class="clearboth pull-right mt-1">Last access
                                    {{{lastaccessdate}}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>    
            </div>

        {{/ moduledetails}}
        {{# viewMoreCard}}
            <div class="col-sm-6 col-12 pull-left view_more_data_card ctype_elearning d-flex justify-content-center align-items-center">
                <a class="center_elemet" href="{{{view_more_url}}}">View More</a>
            </div>
        {{/ viewMoreCard}}
    </div>
    </div>
</div>
{{/ courses_view_count}}
{{^ courses_view_count}}
    {{> block_userdashboard/userdashboard_nodata_text}}
{{/ courses_view_count}}
{{#enableslider}}
    {{> block_userdashboard/userdashboard_enable_slider}}
{{/enableslider}}


    
