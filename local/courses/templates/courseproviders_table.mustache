<button type="button" id ="btn_add" style="float: right;margin: 35px 10px 0px 0px;" onclick="(function(e){ require('local_courses/createCourseProviders').init({contextid:1}) })(event)">{{#str}}add_courseprov,local_courses{{/str}}</button>
                                       
<table id ="manage_courseproviders" class="generaltable">
    <thead>
        <tr>
            <th>{{#str}}name, local_courses{{/str}}</th>
            <th>{{#str}}course_type_shortname, local_courses{{/str}}</th>            
            <th>{{#str}}actions, local_courses{{/str}}</th>
        </tr>
    </thead>
    <tbody>
    {{#result}}
      <tr>
        <td>{{course_provider}}</td>
        <td>{{shortname}}</td>
        <td>
          <a href="javascript:void(0)" onclick = '(function(e){ require("local_courses/createCourseProviders").init({contextid:1, courseprovid:{{id}} }) })(event)' ><i class="icon fa fa-pencil fa-fw " title="Edit" role="img" aria-label="Edit title"></i></i></a>
          <a href="javascript:void(0)" onclick = '(function(e){ require("local_courses/createCourseProviders").deleteConfirm({ courseprovid:{{id}}, name:"{{course_provider}}"  }) })(event)' data-id= "{{id}}" class="local_classid{{id}}  local_class_delete_button" ><i class="icon fa fa-trash fa-fw " title="Delete" role="img" aria-label="Delete"></i></a>
          <a href="javascript:void(0)" onclick = '(function(e){ require("local_courses/createCourseProviders").statusConfirm({ contextid:1, courseprovid:{{id}}, status:{{#active}}"inactive"{{/active}}{{^active}}"active"{{/active}}, name:"{{course_provider}}" }) })(event)'><i class="icon fa {{#active}}fa-eye{{/active}}{{^active}}fa-eye-slash{{/active}} fa-fw iconsmall" title="Active/Inactive" role="img" aria-label="[[le_inactive]]"></i></a>
        </td>        
      </tr>
      {{/result}}
    </tbody>
</table>

