<button type="button" id ="btn_add" style="float: right;margin: 35px 10px 0px 0px;" onclick="(function(e){ require('local_courses/createCoursetype').init({contextid:1}) })(event)">{{#str}}add_coursetype,local_courses{{/str}}</button>
<!--<a id="extended_menu_createcoursetype" class="pull-right course_extended_menu_itemlink" title = "'.get_string('create_coursetype','local_courses').'" data-action="coursetypemodal" onclick="(function(e){ require(\'local_courses/createCoursetype\').init({contextid:'.$systemcontext->id . ' }) })(event)"></a>-->
                                        
<table id ="manage_coursetypes" class="generaltable">
    <thead>
        <tr>
            <th>{{#str}}name, local_courses{{/str}}</th>
            <th>{{#str}}course_type_shortname, local_courses{{/str}}</th>
            <th>{{#str}}coursetype_image, local_courses{{/str}}</th>
            <th>{{#str}}actions, local_courses{{/str}}</th>
        </tr>
    </thead>
    <tbody>
    {{#result}}
      <tr>
        <td>{{course_type}}</td>
        <td>{{shortname}}</td>
        <td>{{#image}} <img src = "{{ image }}" style = " width: 25%;height: 10%"></img> {{/image}}</td>
        <td>
          {{#edit}}
          <a href="javascript:void(0)"  onclick = '(function(e){ require("local_courses/createCoursetype").init({contextid:1, coursetypeid:{{id}} }) })(event)' ><i class="icon fa fa-pencil fa-fw " title="Edit" role="img" aria-label="Edit title"></i></i></a>
          {{/edit}}
          {{#delete}}
          <a href="javascript:void(0)"  onclick = '(function(e){ require("local_courses/createCoursetype").deleteConfirm({ coursetypeid:{{id}}, name:"{{course_type}}"  }) })(event)' data-id= "{{id}}" class="local_classid{{id}}  local_class_delete_button" ><i class="icon fa fa-trash fa-fw " title="Delete" role="img" aria-label="Delete"></i></a>
          {{/delete}}
          {{#show}}
          <a href="javascript:void(0)"  onclick = '(function(e){ require("local_courses/createCoursetype").statusConfirm({ contextid:1, coursetypeid:{{id}}, status:{{#active}}"inactive"{{/active}}{{^active}}"active"{{/active}}, name:"{{course_type}}" }) })(event)'><i class="icon fa {{#active}}fa-eye{{/active}}{{^active}}fa-eye-slash{{/active}} fa-fw iconsmall" title="Active/Inactive" role="img" aria-label="[[le_inactive]]"></i></a>
          {{/show}}
      
        </td>        
      </tr>
      {{/result}}
    </tbody>
</table>

