<button type="button" id ="btn_add" style="float: right;margin: 0px 10px 0px 0px;" onclick="(function(e){
    require('local_courses/levels').init({
        contextid:1, callback:'level_form', component:'local_courses', pluginname:'local_courses'
    })
})(event)"
>{{#str}}add_levels,local_courses{{/str}}</button>
                                       
<table id ="manage_courseproviders" class="generaltable">
    <thead>
        <tr style="text-align: center;">
            <!-- <th>{{#str}}id, local_courses{{/str}}</th> -->
            <th>{{#str}}name, local_courses{{/str}}</th>
            <th>{{#str}}status, local_courses{{/str}}</th>
            <th>{{#str}}actions, local_courses{{/str}}</th>
        </tr>
    </thead>
    <tbody>
    {{#result}}
    {{#status}}
      <tr style="text-align: center;">
        <!-- <td>{{id}}</td> -->
        <td>{{name}}</td>
        <td>{{active}}</td>
        <td>
            <a href="javascript:void(0)" title="{{#str}}edit_level, local_courses{{/str}}" onclick = "(function(e){
                require('local_courses/levels').init({
                    contextid:1, id:{{ id }}, component:'local_courses', callback:'level',plugintype:'local',pluginname:'local_courses'
                })
            })(event)">
                <i class="icon fa fa-pencil fa-fw"></i></i>
            </a>


            <a href="javascript:void(0)" title="{{#str}}del_level, local_courses{{/str}}" onclick = '(function(e){
                require("local_courses/levels").deleteConfirm({
                    id:{{id}}, name:"{{name}}", title:"{{#str}}del_level, local_courses{{/str}}"
                })
            })(event)' data-id= "{{id}}" class="local_classid{{id}}  local_class_delete_button" >
                <i class="icon fa fa-trash fa-fw "></i>
            </a>


            <a href="javascript:void(0)" title="{{#str}}hide, local_courses{{/str}}" onclick = '(function(e){
                require("local_courses/levels").statusConfirm({
                    contextid:1, id:{{id}}
                })
            })(event)'>
                <i class="icon fa fa-eye fa-fw "></i>
            </a>

        </td>        
      </tr>
      {{/status}}



      {{^status}}
      <tr style="text-align: center;" style="opacity: 0.3">
        <!-- <td>{{id}}</td> -->
        <td>{{name}}</td>
        <td>{{active}}</td>
        <td>
            <a href="javascript:void(0)" title="{{#str}}edit_level, local_courses{{/str}}" onclick = "(function(e){
                require('local_courses/levels').init({
                    contextid:1, id:{{ id }}, component:'local_courses', callback:'level',plugintype:'local',pluginname:'local_courses'
                })
            })(event)">
                <i class="icon fa fa-pencil fa-fw"></i></i>
            </a>


            <a href="javascript:void(0)" title="{{#str}}del_level, local_courses{{/str}}" onclick = '(function(e){
                require("local_courses/levels").deleteConfirm({
                    id:{{id}}, name:"{{name}}", title:"{{#str}}del_level, local_courses{{/str}}"
                })
            })(event)' data-id= "{{id}}" class="local_classid{{id}}  local_class_delete_button" >
                <i class="icon fa fa-trash fa-fw "></i>
            </a>


            <a href="javascript:void(0)" title="{{#str}}hide, local_courses{{/str}}" onclick = '(function(e){
                require("local_courses/levels").statusConfirm({
                    contextid:1, id:{{id}}
                })
            })(event)'>
                <i class="icon fa fa-eye-slash fa-fw "></i>
            </a>

        </td>        
      </tr>
      {{/status}}
      {{/result}}
    </tbody>
</table>

