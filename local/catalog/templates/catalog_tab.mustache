{{!
    @template catalog/select box

    Displays select box
}}

<div class='col-12 pull-left rowtab cattbas_container'>
    <a ng-href='#' ng-click='tabfunction(6, 0, null,null, 0,0,1)'  class='tab6 catalog_tabs'>
        <div class='course-category' data-color='green' align='center'>
            <i class='fa fa-list-ul pr-10'></i><span> {{#str}} all, local_catalog {{/str}} </span>
        </div>
    </a>

    {{#elearningexists}}
        <a ng-href='#' ng-click='tabfunction(8, 0, null,null, 0,0,1)' class='tab8 catalog_tabs'>
            <div class='course-category' data-color='red' align='center'>
                <i class='fa fa-book pr-10'></i><span> {{#str}} mooc_courses, local_catalog {{/str}}</span>
            </div>
        </a>
        <a ng-href='#' ng-click='tabfunction(1, 0, null,null, 0,0,1)' class='tab1 catalog_tabs'>
            <div class='course-category' data-color='red' align='center'>
                <i class='fa fa-book pr-10'></i><span> {{#str}} elearning, local_catalog {{/str}}</span>
            </div>
        </a>
    {{/elearningexists}}

    {{#classroomexists}}
        <a ng-href='#' ng-click='tabfunction(2, 0, null,null, 0,0,1)' class='tab2 catalog_tabs'>
            <div class='course-category' data-color='yellow' align='center'>
                <img src='{{ classroomimg }}' class='mr-10 catalog_crimg'><span> {{#str}} iltcourses, local_catalog {{/str}}</span>
            </div>
        </a>
    {{/classroomexists}}

    {{#programexists}}
        <a ng-href='#' ng-click='tabfunction(3, 0, null,null, 0,0,1)' class='tab3 catalog_tabs'>
            <div class='course-category' data-color='red' align='center'>
                <i class='fa fa-tasks pr-10'></i><span> {{#str}} program, local_catalog {{/str}}</span>
            </div>
        </a>
    {{/programexists}}

    {{#certificateexists}}
        <a ng-href='#' ng-click='tabfunction(4, 0, null,null, 0,0,1)' class='tab4 catalog_tabs'>
            <div class='course-category' data-color='red' align='center'>
                <i class='fa fa-graduation-cap pr-10'></i><span> {{#str}} certification, local_catalog {{/str}}</span>
            </div>
        </a>
    {{/certificateexists}}
    

    {{#lpexists}}
        <a ng-href='#' ng-click='tabfunction(5, 0, null,null, 0,0,1)' class='tab5 catalog_tabs'>
            <div class='course-category' data-color='red' align='center'>
                <i class='fa fa-map pr-10'></i><span> {{#str}} learningpath, local_catalog {{/str}}</span>
            </div>
        </a>
    {{/lpexists}}
    
</div> {{! end of class cattbas_container div}}
