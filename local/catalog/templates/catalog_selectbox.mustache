{{!
    @template catalog/select box

    Displays select box
}}

<div class="col-12 pull-left mt-10" id="avaliable_courses">
    <div  class="col-md-4 col-12 pull-left pl-0 mt-10">
        <span class="fa fa-search"></span>
        <input id="search" ng-keyup="filterbyname(tab)" class="form-control" placeholder="Search......">
    </div>

    <div class="col-md-3 col-sm-6 col-12 pull-left mt-10 pl-0">
        <select class="custom-selects form-control" name="enrolltype" ng-model="enrolltype" ng-init="enrolltype=0"  id="enrolltype"  ng-change="enrolltypechange( <% tab %> )" >
            <option value=0 > ---Select status---</option>
            <option value=1 >{{#str}} enrolled, local_catalog {{/str}}</option>
            <option value=2 >{{#str}} yettoenroll, local_catalog {{/str}}</option>
        </select>
    </div>

    <div ng-if=" tab != 5">
        <div class="col-md-3 col-sm-6 col-12 pull-left mt-10 pl-0">
            <select class="custom-selects form-control" name="modelid" ng-model="modelid" id="categoryid" ng-init="modelid=0"  ng-change="modelidchange(tab)">
                <option value=0 > ---Select Category---</option>
                <option ng-repeat="list in categorylist" value="<% list.id %>" ><% list.name %></option>
                {{! <div class="w-full pull-left cat_filter">
                    <option value="<% list.id %>" ng-repeat="list in categorylist">
                    <% list.name %>
                    </option>
                </div> }}
            </select>
        </div>
    </div>
    <div class="col-md-2 col-sm-6 col-12 pull-left mt-10 pl-0">
            <select class="custom-selects form-control" name="sortid" ng-model="sortid" id="sortid" 
            ng-init="sortid=0"  ng-change="sortidchange(<% tab %>)">
                <option value=0 > ---Sort by---</option>
                <option ng-repeat="list in sorting" value="<% list.name %>" ><% list.display %></option>
                {{! <div class="w-full pull-left cat_filter">
                    <option value="<% list.name %>" ng-repeat="list in sorting">
                    <% list.name %>
                    </option>
                </div> }}
            </select>
        </div>
    <div ng-if=" tab == 2" class="pull-left ml-10" id="categoryid_select_container"></div>
</div>
