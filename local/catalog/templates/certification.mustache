{{!
    @template catalog/certification list

    Displays certification
   
}}

<div class="course-img">
    <a ng-if="record.selfenroll == 0" title="<% record.iltformatname %>">
        <div style="background-image: url('<% record.fileurl %>')" class=courseimg_bg></div>
    </a>
    <a ng-if="record.selfenroll == 1" title="<% record.iltformatname %>" ng-href="<% record.certificationlink %>">
        <div style="background-image: url('<% record.fileurl %>')" class=courseimg_bg></div>
    </a>
    <a ng-if="record.selfenroll == 2" title="<% record.iltformatname %>">
        <div style="background-image: url(<% record.fileurl %>)" class=courseimg_bg></div>
    </a>
</div>
<div class="coursepage-name">
    <a ng-if="record.userenrolstatus == 0" class="coursesubtitle" title="<% record.iltformatname %>" >
        <h5 class="cat-level-course"><% record.iltformatname %><br/></h5>
    </a>

    <!--<a ng-if="record.selfenroll == 2" class="coursesubtitle" title="<% record.iltformatname %>" >
        <h5><% record.iltformatname %><br/></h5>
    </a>-->

    <a ng-if="record.userenrolstatus == 1" class="coursesubtitle" title="<% record.iltformatname %>" ng-href="<% record.certificationlink %>">
        <h5 class="cat-level-course"><% record.iltformatname %><br/></h5>
    </a>
    
    <div class="course-desc"  ng-bind-html="record.intro | unsafe" ></div>
    <div class="pull-left w-full cls-rating" ng-bind-html="record.tags | unsafe"></div></br>
    <span class="pull-left w-full mt-2 cls-tags" ng-bind-html="record.rating_element | unsafe"></span>
    <div class="course-author">
        <div class="row">
            <div class="col-md-12 pull-left author-name">
                <div class="course_maindetails">
                    <span class="pull-right w-full">
                        <span class="course_details_new">
                             <span ng-if="record.selfenroll == 0" class="catcr_enrol" ng-bind-html="record.enrollmentbtn | unsafe"></span>
                                <span ng-if="record.selfenroll == 2">
                                    <button class="cat_btn btn-primary viewmore_btn">
                                    {{#str}}capacity_check, local_catalog{{/str}}
                                    </button>
                                </span>
                            <span ng-if="record.userenrolstatus == 1">
                                <a ng-href="<% record.certificationlink %>" class="cat_btn btn-sm btn-primary viewmore_btn">
                                    {{#str}}start_now, local_catalog{{/str}}
                                </a>
                            </span>
                                <span ng-bind-html="record.redirect | unsafe"></span>
                        </span>  {{! end of class course_details_new div}}
                    </span> {{! end of class pull-right div}}
                </div> {{! end of class course_maindetails div}}
            </div> {{! end of class author-name div}}
        </div> {{! end of class row div}}
    </div> {{! end of class course-author div}}
</div> {{! end of class coursepage-name div}}
