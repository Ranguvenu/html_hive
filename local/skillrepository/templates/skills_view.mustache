{{# options}}
    <div class="global_filter_structure">
        <label>{{# str}}search{{/ str}} : </label>
        <input id="global_filter" class="global filter" type="text" name="search_query" data-options="{{options}}" data-dataoptions="{{dataoptions}}">
    </div>
{{/ options}}
    {{#response}}
            {{#viewtypeCard}}
            <table class="generaltable dataTable no-footer" id="skill_repository" role="grid" aria-describedby="skill_repository_info">
                <thead>
                    <tr role="row">
                        <th class="header text-left" tabindex="0">Skill name</th>
                        <th class="header text-left" tabindex="0">Category</th>
                        <th class="header text-center" tabindex="0">Achieved Users</th>
                        <th class="header text-center" tabindex="0">Code</th>
                        <th class="header text-center" tabindex="0">Actions</th>
                    </tr>
                </thead>
            <tbody>
            {{#records}}

                <tr>
                    <td class="text-left">
                        <a href="../skillrepository/skillinfo.php?id={{skill_id}}">{{{skilname}}}</a>
                    </td>
                    <td class="text-left">{{skill_catname}}</td>
                    <td class="text-center">{{achieved_users}}</td>
                    <td class="text-center">{{shortname}}</td>

                    <td class="text-center">
                         <a href="javascript:void(0)" data-action="createrepositorymodal" class="iconsmall" data-value="{{skill_id}}" onclick="(function(e){ require('local_skillrepository/newrepository').init({selector:'createrepositorymodal', contextid:1, repositoryid:{{skill_id}}}) })(event)" style="cursor:pointer" title="Edit">
                        <i class="fa fa-pencil fa-fw" title="{{# str }} edit_title, local_skillrepository {{/ str }}"></i>

                       
                        <a href="javascript:void(0)" title="{{# str}}delete{{/ str}}" onclick="(function(e){ require('local_skillrepository/newrepository').deleteskill({ selector: 'deleteskill' ,skillid:{{skill_id}},contextid:1}) })(event)">
                                        <i class="fa fa-trash fa-fw" aria-hidden="true" title="{{# str }} delete_title, local_skillrepository {{/ str }}" aria-label="Delete"></i>
                        </a>

                        
                    </td>
                </tr>     
            {{/records}}
            </tbody>
    </table>
    {{/viewtypeCard}}
{{/response}}



