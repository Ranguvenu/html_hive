<div class="col-md-12 col-sm-12 col-12 pull-left dept_content">
        <span class="sideline"></span>
            <div class="col-md-12 col-sm-12 col-12 pull-left deptimg_container">
                <div class="dept_topcontent">
                    <span class="connent_line"></span>
                    <div class="col-md-11 col-sm-9 col-9 pull-left dept_topleft p-0">
                        <div class="pull-left"><h4>{{ departmentfullname }}</h4></div>
                        {{# enablesubdepartment_link}}
                        <span class="pull-right subdepartment_link">
                            <label>Sub - Dept : </label>
                            <a href="{{subdept_count_link}}" class="sub_dept_count">{{subdept}}</a>
                        </span>
                        {{/ enablesubdepartment_link}}
                    </div>
                    <div class="col-md-1 col-sm-3 col-3 pull-right dept_topright p-0">
                          <div class="showoptions{{{ deptid }}} actionicons pull-right">
                            <span  class="pull-right showoptions" data-action="showoptions{{{ deptid }}}" onmouseenter="(function(e){ require('theme_epsilon/quickactions').quickactionsCall({ selector:'showoptions{{deptid}}' }) })(event)" onmouseleave="(function(e){require('theme_epsilon/quickactions').quickactionsCall({ selector:'showoptions{{deptid}}' }) })(event)"><i class="fa fa-ellipsis-h options"></i>
                            </span>
                            <ul class="col-md-12 col-sm-12 col-12 p-0 options_container" id = "showoptions{{{ deptid }}}">
                            {{# deptedit}}
                            <li>
                                <a href="javascript:void(0)" title ="{{# str}} delete {{/str}}"  onclick = "(function(e){ require('local_costcenter/costcenterdatatables').costcenterDelete({action:'deletecostcenter', id: {{{ deptid }}} ,confirm: {{{deptstatus}}} ,actionstatus:'Confirmation', actionstatusmsg:'{{{ deptdel_confirmationmsg }}}' }) })(event)"><i class="fa fa-trash fa-fw" aria-hidden="true" aria-label="Delete"></i></a>
                            </li>
                            {{/ deptedit}}
                            {{# depthide}}
                            <li>
                                <a href="javascript:void(0)" title ="{{# str}} inactive {{/str}}" onclick = "(function(e){ require('local_costcenter/newcostcenter').costcenterStatus({action:'updatecostcenter', id: {{{deptid}}} ,confirm: {{{deptstatus}}} ,actionstatus:'Confirmation', actionstatusmsg:'{{{deptaction_message}}}' }) })(event)"><i class="fa fa-eye"></i></a>
                            </li>
                            {{/ depthide}}
                            {{# deptshow}}
                            <li>
                                <a href="javascript:void(0)" title ="{{# str}} active {{/str}}" onclick = "(function(e){ require('local_costcenter/newcostcenter').costcenterStatus({action:'updatecostcenter', id: {{{deptid}}} ,confirm: {{{deptstatus}}} ,actionstatus:'Confirmation', actionstatusmsg:'{{{deptaction_message}}}' }) })(event)"><i class="fa fa-eye-slash"></i></a>
                            </li>
                            {{/ deptshow}}
                            {{# deptedit}}
                            <li>
                            <a href="javascript:void(0)" title="{{# str}} edit {{/str}}" onclick="(function(e){ require('local_costcenter/newcostcenter').init({selector:'createcostcentermodal', contextid:1, id:{{ deptid }}, formtype:'{{formtype}}', headstring:'{{headstring}}' }) })(event)"><i class="fa fa-pencil fa-fw"></i></a>
                            </li>
                            {{/ deptedit}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-sm-12 col-12 dept_btmcontent pull-left">
                {{^ hide_users}}
                <div class="w-full pull-left mt-3 dept_details dept_users">
                    <div class="pull-left col-lg-5 col-md-12 col-sm-12 col-12 px-2 deptdetails_left">
                        <span class="pull-left pr-2 userscolor"><i class="fa fa-user-plus" aria-hidden="true"></i></span>
                        <span class="details_string pull-left">Users</span>
                        <span class="pull-right details_count userscolor">{{ totalusers }}</span>
                    </div> 
                    <div class="pull-left col-lg-7 col-md-12 col-sm-12 col-12 px-2 deptdetails_right">
                        <span class="w-half pull-left inforight"><i class="fa fa-user-o pr-1 pull-left activeicon" aria-hidden="true"></i>
                            <span class="lable_name pull-left">Active<span class="label_colon pull-right mr-1">:</span></span><span class="userscolor">{{ activeusercount }}</span>
                        </span>

                         <span class="w-half pull-left"><i class="fa fa-user-times pr-1 pull-left inactiveicon" aria-hidden="true"></i><span class="lable_name pull-left">Inactive<span class="label_colon pull-right mr-1">:</span></span><span class="userscolor">{{ inactiveusercount }}</span></span>
                    </div>
                </div>
                {{/ hide_users}}
                {{^ hide_courses}}
                <div class="w-full pull-left mt-3 dept_details dept_courses">
                    <div class="pull-left col-lg-5 col-md-12 col-sm-12 col-12 px-2 deptdetails_left">
                        <span class="pull-left pr-2 coursescolor"><i class="fa fa-book" aria-hidden="true"></i></span>
                        <span class="details_string pull-left">Courses</span>
                        <span class="pull-right details_count coursescolor">{{ coursecount }}</span>
                    </div>
                    <div class="pull-left col-lg-7 col-md-12 col-sm-12 col-12 px-2 deptdetails_right">
                        <span class="w-half pull-left inforight"><i class="fa fa-user-o pr-1 pull-left activeicon" aria-hidden="true"></i>
                            <span class="lable_name pull-left">Active<span class="label_colon pull-right mr-1">:</span></span><span class="coursescolor">{{ activecoursecount }}</span>
                        </span>

                         <span class="w-half pull-left"><i class="fa fa-user-times pr-1 pull-left inactiveicon" aria-hidden="true"></i><span class="lable_name pull-left">Inactive<span class="label_colon pull-right mr-1">:</span></span><span class="coursescolor">{{ inactivecoursecount }}</span></span>
                    </div>
                </div>
                {{/ hide_courses}}
                {{^ hide_exams}}
                <div class="w-full pull-left mt-3 dept_details dept_onlinetests">
                    <div class="pull-left col-lg-5 col-md-12 col-sm-12 col-12 px-2 deptdetails_left">
                        <span class="pull-left pr-2 onlinetestscolor"><i class="fa fa-desktop" aria-hidden="true"></i></span>
                        <span class="details_string pull-left">Online Exams</span>
                        <span class="pull-right details_count onlinetestscolor">{{ dept_ont }}</span>
                    </div> 
                    <div class="pull-left col-lg-7 col-md-12 col-sm-12 col-12 px-2 deptdetails_right">
                        <span class="w-half pull-left inforight"><i class="fa fa-user-o pr-1 pull-left activeicon" aria-hidden="true"></i>
                            <span class="lable_name pull-left">Active<span class="label_colon pull-right mr-1">:</span></span><span class="onlinetestscolor">{{ dept_ontactive }}</span>
                        </span>

                         <span class="w-half pull-left"><i class="fa fa-user-times pr-1 pull-left inactiveicon" aria-hidden="true"></i><span class="lable_name pull-left">Inactive<span class="label_colon pull-right mr-1">:</span></span><span class="onlinetestscolor">{{ dept_ontinactive }}</span></span>
                    </div>
                </div>
                {{/ hide_exams}}
                {{^ hide_learninplans}}
                <div class="w-full pull-left mt-3 dept_details dept_learningplans">
                    <div class="pull-left col-lg-5 col-md-12 col-sm-12 col-12 px-2 deptdetails_left">
                        <span class="pull-left pr-2 lpcolor"><i class="fa fa-map" aria-hidden="true"></i></span>
                        <span class="details_string pull-left">{{#str}}learningplan, local_learningplan{{/str}}</span>
                        <span class="pull-right details_count lpcolor">{{ alllearningplans }}</span>
                    </div>
                    <div class="pull-left col-lg-7 col-md-12 col-sm-12 col-12 px-2 deptdetails_right">
                        <span class="w-half pull-left inforight"><i class="fa fa-user-o pr-1 pull-left activeicon" aria-hidden="true"></i>
                            <span class="lable_name pull-left">Active<span class="label_colon pull-right mr-1">:</span></span><span class="lpcolor">{{ activelearningplans }}</span>
                        </span>

                         <span class="w-half pull-left"><i class="fa fa-user-times pr-1 pull-left inactiveicon" aria-hidden="true"></i><span class="lable_name pull-left">Inactive<span class="label_colon pull-right mr-1">:</span></span><span class="lpcolor">{{ inactivelearningplans }}</span></span>
                    </div>
                </div>
                {{/ hide_learninplans}}
                {{^ hide_feedbacks}}
                <div class="w-full pull-left mt-3 dept_details dept_feedbacks">
                    <div class="pull-left col-lg-5 col-md-12 col-sm-12 col-12 px-2 deptdetails_left">
                        <span class="pull-left pr-2 feedbackscolor"><i class="fa fa-clipboard" aria-hidden="true"></i></span>
                        <span class="details_string pull-left">Feedbacks</span>
                        <span class="pull-right details_count feedbackscolor">{{ dept_feedback }}</span>
                    </div>
                    <div class="pull-left col-lg-7 col-md-12 col-sm-12 col-12 px-2 deptdetails_right">
                        <span class="w-half pull-left inforight"><i class="fa fa-user-o pr-1 pull-left activeicon" aria-hidden="true"></i>
                            <span class="lable_name pull-left">Active<span class="label_colon pull-right mr-1">:</span></span><span class="feedbackscolor">{{ dept_feedbackactive }}</span>
                        </span>

                         <span class="w-half pull-left"><i class="fa fa-user-times pr-1 pull-left inactiveicon" aria-hidden="true"></i><span class="lable_name pull-left">Inactive<span class="label_colon pull-right mr-1">:</span></span><span class="feedbackscolor">{{ dept_feedbackinactive }}</span></span>
                    </div>
                </div>
                {{/ hide_feedbacks}}
                {{^ hide_classroom}}
                <div class="w-full pull-left mt-3 dept_details dept_classrooms">
                    <div class="pull-left col-lg-5 col-md-12 col-sm-12 col-12 px-2 deptdetails_left">
                        <span class="pull-left pr-2 classroomscolor"><span class="classroom_icon_wrap"></span></span>
                        <span class="details_string pull-left">Classrooms</span>
                        <span class="pull-right details_count classroomscolor">{{ allclassroomcount }}</span>
                    </div>
                    <div class="pull-left col-lg-7 col-md-12 col-sm-12 col-12 px-2 deptdetails_right">
                        <span class="w-half pull-left inforight"><i class="fa fa-list-ul pr-1 pull-left newicon" aria-hidden="true"></i>
                            <span class="lable_name pull-left">New<span class="label_colon pull-right mr-1">:</span></span><span class="classroomscolor">{{ newclassroomcount }}</span>
                        </span>

                         <span class="w-half pull-left"><i class="fa fa-lock pr-1 pull-left inactiveicon" aria-hidden="true"></i><span class="lable_name pull-left">Inactive<span class="label_colon pull-right mr-1">:</span></span><span class="classroomscolor">{{ cancelledclassroomcount }}</span></span>

                         <span class="w-half pull-left inforight"><i class="fa fa-bullhorn pr-1 pull-left activeicon" aria-hidden="true"></i><span class="lable_name pull-left">Active<span class="label_colon pull-right mr-1">:</span></span><span class="classroomscolor">{{ activeclassroomcount }}</span></span>

                         <span class="w-half pull-left"><i class="fa fa-flag-o pr-1 pull-left completeicon" aria-hidden="true"></i><span class="lable_name pull-left">Completed<span class="label_colon pull-right mr-1">:</span></span><span class="classroomscolor">{{ completedclassroomcount }}</span></span>
                    </div>
                </div>
                {{/ hide_classroom}}
                {{^ hide_program}}
                <div class="w-full pull-left mt-3 dept_details dept_programs">
                    <div class="pull-left col-lg-5 col-md-12 col-sm-12 col-12 px-2 deptdetails_left">
                        <span class="pull-left pr-2 programscolor"><span class="program_icon_wrap"></span></span>
                        <span class="details_string pull-left">Programs</span>
                        <span class="pull-right details_count programscolor">{{ allprogramcount }}</span>
                    </div>
                    <div class="pull-left col-lg-7 col-md-12 col-sm-12 col-12 px-2 deptdetails_right">
                        <span class="w-half pull-left inforight"><i class="fa fa-bullhorn pr-1 pull-left activeicon" aria-hidden="true"></i><span class="lable_name pull-left">Active<span class="label_colon pull-right mr-1">:</span></span><span class="programscolor">{{ activeprogramcount }}</span></span>

                         <span class="w-half pull-left"><i class="fa fa-flag-o pr-1 pull-left completeicon" aria-hidden="true"></i><span class="lable_name pull-left">Inactive<span class="label_colon pull-right mr-1">:</span></span><span class="programscolor">{{ inactiveprogramcount }}</span></span>
                    </div>
                </div>
                {{/hide_program}}
                {{^ hide_certification}}
                <div class="w-full pull-left mt-3 dept_details dept_certifications">
                    <div class="pull-left col-lg-5 col-md-12 col-sm-12 col-12 px-2 deptdetails_left">
                        <span class="pull-left pr-2 certcolor"><i class="fa fa-graduation-cap" aria-hidden="true"></i></span>
                        <span class="details_string pull-left">Certifications</span>
                        <span class="pull-right details_count certcolor">{{ allcertificationcount }}</span>
                    </div>
                    <div class="pull-left col-lg-7 col-md-12 col-sm-12 col-12 px-2 deptdetails_right">
                        <span class="w-half pull-left inforight"><i class="fa fa-list-ul pr-1 pull-left newicon" aria-hidden="true"></i>
                            <span class="lable_name pull-left">New<span class="label_colon pull-right mr-1">:</span></span><span class="certcolor">{{ newcertificationcount }}</span>
                        </span>

                        <span class="w-half pull-left"><i class="fa fa-lock pr-1 pull-left inactiveicon" aria-hidden="true"></i><span class="lable_name pull-left">Inactive<span class="label_colon pull-right mr-1">:</span></span><span class="certcolor">{{ cancelledcertificationcount }}</span></span>

                        <span class="w-half pull-left inforight"><i class="fa fa-bullhorn pr-1 pull-left activeicon" aria-hidden="true"></i><span class="lable_name pull-left">Active<span class="label_colon pull-right mr-1">:</span></span><span class="certcolor">{{ activecertificationcount }}</span></span>

                        <span class="w-half pull-left"><i class="fa fa-flag-o pr-1 pull-left completeicon" aria-hidden="true"></i><span class="lable_name pull-left">Completed<span class="label_colon pull-right mr-1">:</span></span><span class="certcolor">{{ completedcertificationcount }}</span></span>
                    </div>
                </div>
                {{/ hide_certification}}
            </div>
        </div>
