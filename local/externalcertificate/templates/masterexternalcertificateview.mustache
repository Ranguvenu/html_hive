{{!
    @template local_courseassignment/assignmentreport

    This template renders the courses content for the courses plugin.

    Example context (json):
    {}
}}

{{#response}}
    {{#viewtypeCard}}   
    <div class="table-responsive"> 
    <table id ="demo" class="generaltable">
        <thead>
            <tr style="text-align: center;">
                
                <th>{{#str}}cname, local_externalcertificate{{/str}}</th>               
                <th>{{#str}}coursecode, local_externalcertificate{{/str}}</th>  
                <th>{{#str}}uploadeddate, local_externalcertificate{{/str}}</th>
                {{#actions}}
                <th>{{#str}}action, local_externalcertificate{{/str}}</th>
                {{/actions}}
            </tr>
        </thead>
     
        <tbody>
            {{#records}}
             
            <tr style="text-align: center;">
               
                <td>{{coursename}}</td>
                <td>{{coursecode}}</td>
                <td>{{uploadeddate}}</td>
                {{#actions}}
                <td>
                    {{#editcap}}                        
                        <a href="javascript:void(0)" title="{{#str}}edit{{/str}}" data-action="createusermodal" class="createusermodal" data-value="{{userid}}" onclick="(function(e){ require('local_externalcertificate/external_certificates').mastercertificate_form({ contextid:1, id:{{id}} ,callback:'mastercertificate_form', component:'local_externalcertificate', pluginname:'local_externalcertificate'})})(event)" style="cursor:pointer" title="Edit"><i class="fa fa-pencil fa-fw"></i>
                        </a>
                    {{/editcap}}
                    {{#deletecap}}                        
                        <a href="javascript:void(0)" title="{{#str}}delete{{/str}}" data-action="createusermodal" class="createusermodal" data-value="{{userid}}" onclick="(function(e){ require('local_externalcertificate/external_certificates').deleteConfirm({ action:'deletemastercertificate',id:{{id}} , component:'local_externalcertificate', pluginname:'local_externalcertificate'})})(event)" style="cursor:pointer" title="Delete"><i class="fa fa-trash"></i>
                        </a>
                    {{/deletecap}}
                     {{^deletecap}}                        
                        <a href="javascript:void(0)" title="{{#str}}cantdelete_certificate,local_externalcertificate{{/str}}" data-action="createusermodal" class="disabled" data-value="{{userid}}"  style="cursor:pointer" title="{{#str}}cantdelete_certificate,local_externalcertificate{{/str}}"><i class="fa fa-trash"></i>
                        </a>
                    {{/deletecap}}

                </td>
                {{/actions}}
            </tr>
               
            {{/records}}
        </tbody>
        </table>
    </div>
    {{/viewtypeCard}}
{{/response}}


