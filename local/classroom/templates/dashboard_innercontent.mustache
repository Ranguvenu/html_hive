{{# classroom_view_count}}
<div id="{{{subtab}}}" class="tab-pane divslider active active_subtab">
<div class="userdashboard_content userdashboard_ctype_classroom row-{{#enableflow}}no{{/enableflow}}wrap">
{{#enableslider}}
     {{> block_userdashboard/userdashboard_enable_slider}}  
{{/enableslider}}
    {{#moduledetails}}
    <div class="col-lg-4 col-sm-6 col-12 tabs_cmn_class courses_inprogress_slide {{{subtab}}} ctype_classroom" data-index="{{index}}">
        <div class="classroom_container w-full ">
            <div class="w-full ub_classrooms card">
                <div class="card-img-top" style="background-image: url({{image}}) ;">
                    <span class="label_online">Online</span>
                </div>
                <div class="w-full  ub_classroomname  ">
                    <span class="userdashboard_employee_classroom_icon"></span>
                    <a href='{{classroom_url}}' alt="{{classroomFullname}}">{{displayClassroomFullname}}</a>
                </div>
                <div class="w-full card-body">
                    <div class="w-full coursecontent">
                        <div class="desc coursedesc">{{{classroomSummary}}}</div>

                        <span class="schedule"><i class="fa fa-calendar" aria-hidden="true"></i>{{{startdate}}} &nbsp;-&nbsp;{{{enddate}}}</span>
                        <div class=" {{#rating_element}}w-full d-flex align-items-center justify-content-between {{/rating_element}}">
                            <div class="ratings">{{{rating_element}}}</div>
                            <a href="{{classroom_url}}">
                                <button class="btn btn-primary launch_btn">{{#str}}launch,block_userdashboard{{/str}}</button>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
        
    {{/moduledetails}}  
    {{# viewMoreCard}}
        <div class="col-lg-4 col-sm-6 col-12  view_more_data_card ctype_classroom d-flex justify-content-center align-items-center">
            <a class="center_elemet" href="{{{view_more_url}}}">View More</a>
        </div>
    {{/ viewMoreCard}}
</div>
</div>
{{/ classroom_view_count}}

{{^ classroom_view_count}}
    {{> block_userdashboard/userdashboard_nodata_text}}  
{{/ classroom_view_count}}
