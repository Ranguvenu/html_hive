{{#response}}

    {{! card view }}
    {{#viewtypeCard}}
        <div class="card-wrap m-0 p-0 pull-left w-100">
            {{#records}}
                <div class="{{cardClass}} pull-left mt-3">
                    <div class="classroom_container w-100 pull-left mb-2 {{classroomstatusclass}}">
                        <div class="w-100 pull-left classroomname_status">
                            <div class="pull-left classroom_name_info">
                                <span class="browse_classroom_icon mr-1"></span>
                                <a href="{{ classroomurl }}" class="class_name" title = "{{ classname }}">{{ classname_string }}</a>
                                <span class="bg_banner" title="{{ crstatustitle }}"></span>
                            </div>
                            <div class="pull-right showoptions{{classroomid}} actionicons">
                                {{# action}}
                                    {{# mouse_overicon}}
                                        <span  class="pull-right showoptions" data-action="showoptions{{classroomid}}" onmouseenter="(function(e){ require('theme_epsilon/quickactions').quickactionsCall({ selector:'showoptions{{classroomid}}' }) })(event)" onmouseleave="(function(e){require('theme_epsilon/quickactions').quickactionsCall({ selector:'showoptions{{classroomid}}' }) })(event)">
                                            <i class="fa fa-ellipsis-h options" aria-hidden="true" title="" aria-label=""></i>
                                        </span>
                                        <ul class="options_container" id="showoptions{{classroomid}}">
                                            {{# delete}}
                                                <li>
                                                    <a title="Course backup" href="javascript:void(0)" alt = "{{# str}} delete {{/ str}}"
                                                        title = "{{# str}} delete {{/ str}}" onclick="(function(e){ require('local_classroom/classroom').deleteConfirm({action:'deleteclassroom', id: {{ classroomid }}, classroomid: {{ classroomid }} }) })(event)">
                                                        <i class="fa fa-trash fa-fw" aria-hidden="true" aria-label="" title = "{{# str}} delete {{/ str}}"></i>
                                                    </a>
                                                </li>
                                            {{/ delete}}
                                            
                                            {{# edit}}
                                                <li>
                                                    <a title="User enrollments" href="javascript:void(0)" title = "{{# str}} edit {{/str}}" onclick="(function(e){ require('local_classroom/ajaxforms').init({contextid:1, component:'local_classroom', callback:'classroom_form', form_status:0, plugintype: 'local', pluginname: 'classroom', id: {{ classroomid }} }) })(event)">
                                                        <i class="fa fa-pencil fa-fw" aria-hidden="true" aria-label="" title = "{{# str}} edit {{/str}}"></i>
                                                    </a>
                                                </li>
                                            {{/ edit}}
                                            {{# assignusers}}
                                                <li>
                                                    <a href="{{ assignusersurl }}"><i class="icon fa fa-user-plus fa-fw" aria-hidden="true" aria-label="" title ="Assign Users"></i></a>
                                                </li>
                                            {{/ assignusers}}
                                        </ul>
                                    {{/ mouse_overicon}}
                                {{/ action}}
                            </div>
                        </div>
                        <div class="w-100 pull-left p-10 classroomcontainer_top">
                            <div class="dataContainer col-md-7 col-12 pull-left px-2 py-1">
                                <div class="datacontent">
                                    <div class="description">
                                        {{# isdescription}}
                                            {{^ descriptionstring}}
                                                <p class="text-muted">{{{ description }}}</p>
                                            {{/ descriptionstring }}
                                            {{# descriptionstring}}
                                                <p class="text-muted">{{ descriptionstring }}...</p>
                                            {{/ descriptionstring }}
                                        {{/ isdescription}}
                                        {{^ isdescription }}
                                            <p class="alert alert-info text-center">{{#str}}nocoursedesc, local_courses{{/str}}</p>
                                        {{/ isdescription }}
                                    </div>
                                    <div class="dataContainer_left">

                                        <!--<p class="contentlist">
                                            <span class="lable_name text-muted">Scheduled date</span>
                                            <span class="text-muted">: </span>
                                            <span class="">&nbsp;<b>{{ startdate }} to {{ enddate }}</b></span>
                                        </p>-->

                                        <!--<p class="contentlist">
                                            <span class="lable_name text-muted">Code</span>
                                            <span class="text-muted pull-left">: </span>
                                            <span class="">&nbsp;<b>{{ classname_string }}</b></span>
                                        </p>-->

                                        <p class="contentlist">
                                            <span class="lable_name text-muted">Enrolled Users</span>
                                            <span class="text-muted">: </span>
                                            <span class="">&nbsp;<b>{{ enrolled_users }}</b></span>
                                        </p>

                                        <p class="contentlist">
                                            <span class="lable_name text-muted">Department</span>
                                            <span class="text-muted">: </span>
                                            <span class="" title="{{ departmenttitle }}">&nbsp;<b>{{ departmentname }}</b></span>
                                        </p>

                                        <p class="contentlist">
                                            <span class="lable_name text-muted">Seats Allocation</span>
                                            <span class="text-muted">: </span>
                                            <span class="">&nbsp;<b>{{ seatallocation }}</b></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="classesimgContainer col-md-5 col-12 pull-left p-0">
                                <div class="classesimgContainer">
                                     <a href="{{ classroomurl }}" class="d-none d-md-block">
                                        <div style="background-image: url('{{{ classesimg }}}');" alt="{{ classname }}" title="{{ classname }}" class="classesimg courseimg_bg" ></div>
                                    </a>
                                    <!--<img src="{{ classesimg }}" title ="{{ classname }}" class="classesimg" />-->
                                     <!--<div class="classname_strip">
                                         <span class="classname" title = "{{ classname }}" >{{ classname_string }}</span>
                                         <span class="classcreated" title="{{usercreated}}"">By&nbsp;{{ usercreated }}</span>
                                     </div>-->
                                     <div class="classdate_strip p-2">
                                         <span class="classdate">
                                            <i class="fa fa-calendar" aria-hidden="true"></i>{{ startdate }} to {{ enddate }}
                                        </span>
                                     </div>
                                </div>
                            </div>
                        </div>
                        <div class="w-100 pull-left classroomcontainer_btm">
                            <div class="col-md-6 col-12 pull-left p-0">
                                <div class="trainersContainer p-2 w-100 pull-left">
                                    <h6 class="trainer_header">Trainers</h6>
                                    {{# trainerslimit}}
                                        {{# trainers }}
                                        <div class="trainer_details">
                                            <span class="trainerimg pr-2 pull-left">
                                               
                                                    <img src="{{trainerpic}}" alt="Picture of {{trainername}}" title="Picture of {{trainername}}" class="trainer_img userpicture" width="30" height="30">
                                               
                                            </span>
                                            <span class="trainerdetails">
                                                <span class="trainername">{{ trainername }}</span>
                                                <span class="trainerdesignation">{{ trainerdesignation }}</span>
                                            </span>
                                        </div>
                                        {{/ trainers }}
                                    {{/ trainerslimit}}
                                    {{^ trainerslimit }}
                                        {{# moretrainers}}
                                             <div class="trainer_details">
                                                <span class="trainerimg pull-left">{{{ classroomtrainerpic }}}</span>
                                                <span class="trainerdetails"><span class="trainername">{{ trainername }}</span><span class="trainerdesignation">{{ trainerdesignation }}</span></span>
                                            </div>
                                        {{/ moretrainers}}
                                    {{/ trainerslimit}}
                                    {{^ trainers}}
                                            <p class="no_trainers text-center">No Trainers Assigned</p>
                                    {{/ trainers}}
                                </div>
                            </div>
                            <div class="col-md-6 col-12 pull-left p-0">
                                <div class="coursesContainer p-2">
                                    <h6 class="trainer_header">Courses</h6>
                                    <ul class="crcourseslist pull-left m-0">
                                        {{# courses }}
                                            <li class="w-full pull-left">
                                                <p class="contentlist pull-left">
                                                    <a href="{{ courseurl }}" title="{{ coursetitle }}"> {{ coursename }} </a>
                                                </p>
                                            </li>
                                        {{/ courses }}
                                    </ul>
                                    {{^ courses }}
                                        <p class="text-center nocourses">{{# str }} noclassroomcourses, local_classroom {{/ str }}</p>
                                    {{/ courses }}
                                </div>
                            </div>
                        <!--<div class="col-md-12 p-0">
                            <div class="viewmorestrip pull-right pt-15 pb-15">
                                <a href="view.php?cid={{classroomid}}" class="viewmorelink">View More</a>
                            </div>
                        </div>-->
                        </div>

                    </div>
                </div>
            {{/records}}
        </div>
    {{/viewtypeCard}}

{{/response}}
