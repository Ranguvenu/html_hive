<div class="w-full pull-left planview_container">
	<div class="col-lg-12 col-md-12 pull-left p-0 planview_topcontent">
		<div class="col-lg-3 col-md-3 pull-left d-none-1023 p-0">
			<div style="background-image: url('{{ lpnameimg }}');" alt="{{ lpname }}" title="{{ lpname }}" class="lpimg_bg" ></div>
		</div>
		<div class="col-lg-9 col-md-9 d-block-1023 pull-left">
			<!--<h4 class='pull-left mb-5 lp_name'>{{ lpname }}</h4>-->	
			<div class="w-full pull-left pb-10">
				<span class="w-full pull-left"><b>Description :</b></span>
				<div class="w-full pull-left description" id="moduleds">
				{{# description }}
					<div class="m-0 collapse" id="collapseExample" aria-expanded="false">{{{ description }}}</div>
					{{# descount}}
					<a role="button" class="collapsed" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample"></a>
					{{/ descount }}
				{{/ description }}
				{{^ description }}
					<p class="alert alert-info text-xs-center m-0">{{#str}}nocoursedesc, local_courses{{/str}}</p>
				{{/ description }}
			</div>
		</div>
        <!--<div class="w-full pull-left mt-5 mb-5"><img src="{{ lpcoursespath }}" class="w-full" height="40"/></div>-->
			<div class="w-full pull-left coursepath"> {{{lpcoursespath}}} </div>
			<div class="col-lg-12 col-md-12 pull-left p-0">
				<div class="col-lg-6 col-md-6 pull-left p-0">
					<div class="w-full pull-left mb-1">
						<span class="w-full pull-left"><b>Details :</b></span>
					</div>
					<div class="w-full pull-left">
						<span class="text-muted" style="min-width: 100px;float: left;">Learningpath Code
						<span style="margin-right: 10px;float: right;">:</span> 
						</span><span style="color:#333;"><strong>{{ plan_learningplancode }}</strong></span>
					</div>
					<div class="w-full pull-left">
						<span class="text-muted"  style="min-width: 100px;float: left;">Department 
						<span style="margin-right: 10px;float: right;">:</span> 
						</span><span style="color:#333;" title="{{ plan_department_string }}"><strong>{{ plan_department }}</strong></span>
					</div>
					<div class="w-full pull-left">
						<span class="text-muted" style="min-width: 100px;float: left;">Credits 
						<span style="margin-right: 10px;float: right;">:</span> 
						</span><span style="color:#333;"><strong>{{ plan_credits }}</strong></span>
					</div>
					<div class="w-full pull-left">
						<span class="text-muted" style="min-width: 100px;float: left;">Grade 
						<span style="margin-right: 10px;float: right;">:</span> 
						</span><span style="color:#333;"><strong>{{ plan_grade }}</strong></span>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 pull-left pl-0">
					<div class="w-full pull-left mb-1">
						<span class="w-full pull-left"><b>Courses :</b></span>
					</div>
					<div class="w-full pull-left">
						<span class="text-muted" style="min-width: 100px;float: left;">Assigned 
						<span style="margin-right: 10px;float: right;">:</span> 
						</span><span style="color:#333;"><strong>{{ total_assigned_course }}</strong></span>
					</div>
					<div class="w-full pull-left">
						<span class="text-muted" style="min-width: 100px;float: left;">Mandatory
						<span style="margin-right: 10px;float: right;">:</span> 
						</span><span style="color:#333;"><strong>{{ mandatory }}</strong></span>
					</div>
					<div class="w-full pull-left">
						<span class="text-muted" style="min-width: 100px;float: left;">Optional
						<span style="margin-right: 10px;float: right;">:</span> 
						</span><span style="color:#333;"><strong>{{ optional }}</strong></span>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 pull-left pl-0">
					<div class="w-full pull-left mb-1">
						<span class="w-full pull-left "><b>Users :</b></span>
					</div>
					<div class="w-full pull-left">
						<span class="text-muted" style="min-width: 100px;float: left;">Enrolled  
						<span style="margin-right: 10px;float: right;">:</span> 
						</span><span style="color:#333;"><strong>{{ total_enroled_users }}</strong></span>
					</div>
					<div class="w-full pull-left">
						<span class="text-muted" style="min-width: 100px;float: left;">Completed 
						<span style="margin-right: 10px;float: right;">:</span> 
						</span><span style="color:#333;"><strong>{{ cmpltd }}</strong></span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>





