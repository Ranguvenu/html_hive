<div class="w-full row planview_container">
	<ul class="course_extended_menu_list">
		{{{challenge_element}}}
	</ul>
	<div class="col-lg-12 col-md-12 planview_topcontent">
		{{# needenroluser}}
		<!--<a class='btn btn-primary pull-right mr-15' href='javascript:void(0)' onclick='(function(e){
		require("local_learningplan/courseenrol").enrolUser({planid:{{{planid}}}, userid:{{{userid}}}, planname:"{{{lpname}}}" }) })(event)'><i class="fa fa-pencil-square-o" aria-hidden="true"></i>{{# str}} enrol , local_learningplan{{/ str}}</a>-->
		{{^ requestbtn}}
			{{^ pending}}
				<div class="w-full pull-right">
					<span class="enrol">
						<a class='btn btn-primary pull-right mr-15' href='javascript:void(0)' onclick='(function(e){
						require("local_learningplan/courseenrol").enrolUser({planid:{{{planid}}}, userid:{{{userid}}}, planname:"{{{lpname}}}" }) })(event)'>
							{{# str}} enroll , local_search{{/ str}}
						</a>
					</span>
				</div>
			{{/ pending}}
		{{/ requestbtn}}
		{{# requestbtn}}
			<div class="w-full pull-right">
				<span class="enrol">
					<a class="btn btn-primary pull-right mr-15" href='javascript:void(0)' onclick="(function(e){ require('local_request/requestconfirm').init({componentid:{{planid}}, component:'{{component}}', action:'{{action}}', componentname: '{{lpname}}' }) })(event)" >
					{{# str}} requestforenroll , local_classroom{{/ str}}
					</a>
				</span>
			</div>
		{{/ requestbtn}}
		{{# pending}}
			<div class="enrol_strip">
				<button class="cat_btn btn btn-primary pull-right mr-15">Processing</button>
			</div>
		{{/ pending}}
	{{/ needenroluser}}
		<div class="row">
			<div class="col-lg-3 col-md-3 d-none-1023 p-0">
				<div style="background-image: url('{{ lpimgurl }}');height:207px;" alt="{{ lpname }}" title="{{ lpname }}" class="lpimg_bg" ></div>
	
			{{{display_ratings}}}
			{{{display_like}}}
			</div>
			<div class="col-lg-9 col-md-9 pull-left d-block-1023">
				<!--<h4 class='pull-left mb-5 lp_name'>{{ lpname }}</h4>-->	
				<div class="w-full pull-left pb-10">
					<span class="w-full pull-left mb-1"><b>Description :</b></span>
					<div class="w-full pull-left description">
						{{# description_string }}
							<p class="m-0">{{{ description_string }}}</p>
						{{/ description_string }}
						{{^ description_string }}
							<p class="alert alert-info text-xs-center m-0">{{#str}}nocoursedesc, local_courses{{/str}}</p>
						{{/ description_string }}
					</div>
				</div>
				<!--<div class="w-full pull-left mt-5 mb-5"><img src="{{ lpcoursespath }}" class="w-full" height="40"/></div>-->
				<div class="w-full pull-left coursepath">{{# lpcoursespath }} {{{lpcoursespath}}} {{/ lpcoursespath }} {{^ lpcoursespath }} <span class="w-full pull-left text-xs-center alert alert-info mt-1 m-0">Assign 2 or more courses to see the journey</span> {{/ lpcoursespath }}</div>
				<div class="col-lg-12 col-md-12 pull-left p-0">
					<div class="col-lg-6 col-md-6 pull-left pl-0">
						<div class="w-full pull-left mb-1">
							<span class="w-full pull-left"><b>Details :</b></span>
						</div>
						<div class="w-full pull-left">
							<span class="text-muted" style="min-width: 100px;float: left;">Learning Journey Code
							<span style="margin-right: 10px;float: right;">:</span> 
							</span><span style="color:#333;"><b>{{ plan_learningplan_code }}</b></span>
						</div>
						<div class="w-full pull-left">
							<span class="text-muted" style="min-width: 100px;float: left;">Credits 
							<span style="margin-right: 10px;float: right;">:</span> 
							</span><span style="color:#333;"><b>{{ lplancredits }}</b></span>
						</div>
					</div>
					<div class="col-lg-6 col-md-6 pull-left pl-0">
						<div class="w-full pull-left mb-1">
							<span class="w-full pull-left"><b>Courses :</b></span>
						</div>
						<div class="w-full pull-left">
							<span class="text-muted" style="min-width: 100px;float: left;">Mandatory  
							<span style="margin-right: 10px;float: right;">:</span> 
							</span><span style="color:#333;"><b>{{ mandatarycourses_count }}</b></span>
						</div>
						<div class="w-full pull-left">
							<span class="text-muted" style="min-width: 100px;float: left;">Optional
							<span style="margin-right: 10px;float: right;">:</span> 
							</span><span style="color:#333;"><b>{{ optionalcourses_count }}</b></span>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		
		
		
	</div>
</div>
