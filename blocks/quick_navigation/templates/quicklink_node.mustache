<div class="quick_nav_list manage_{{pluginname}} {{space_count}}_of_three_columns" >
    <span class='anch_span'>
        {{# plugin_icon_class}}
            <i class="{{plugin_icon_class}}"></i>
        {{/ plugin_icon_class}}
        {{^ plugin_icon_class}}
            <span class='{{pluginname}}_icon_wrap'></span>
        {{/ plugin_icon_class}}
    </span>

    <div class='w-100 pull-left'>
        <div class='quick_navigation_detail'>
            <div class='span_str'>{{{node_header_string}}}</div>
            <span class='span_createlink'>
                {{#create}}
                    {{{create_element}}} |
                {{/create}}
                {{# view}}
                <a href="{{viewlink_url}}" class='viewlink' title= "{{viewlink_title}}">
                        {{#str}}view{{/str}}
                    </a>
                {{/ view}}
            </span>
        </div>
     </div>
    {{# displaystats}}
        <div class="w-100 pull-left">
            <div class="progress mx-auto mt-3 mb-3">
                <div class="progress-bar" role="progressbar" style="width: {{percentage}}%;" aria-valuenow="{{percentage}}" aria-valuemin="0" aria-valuemax="100">{{percentage}}%</div>
            </div>
        </div>

        <ul class="dashboard_count_list w-100 pull-left p-15">
            <li class="dashbaord_count_item"><span class="">
                <span class="d-block dashboard_count_string">Total</span><span class="dashboard_count_value">{{count_total}}</span></span>
            </li>
            <li class="dashbaord_count_item"><span class="">
                <span class="d-block dashboard_count_string">Active</span><span class="dashboard_count_value">{{count_active}}</span></span>
            </li>
            <li class="dashbaord_count_item"><span class="">
                <span class="d-block dashboard_count_string">{{inactive_string}}</span><span class="dashboard_count_value">{{count_inactive}}</span></span>
            </li>
        </ul>
    {{/ displaystats}}
</div>



