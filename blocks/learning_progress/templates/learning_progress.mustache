  <div class="learning_progress_container">
      <div class="row w-100 align-items-center">
        <div class="col-lg-4 col-md-12 ">
          <div class="d-flex progress_container align-items-center">
            <span>
              {{# str}} learning_progress, block_learning_progress {{/ str}}
            </span>
            <div class="progress flex-grow-1">
              <div class="progress-bar" role="progressbar" aria-valuenow="{{ progress }}" aria-valuemin="0" aria-valuemax="100" style="width:{{ progress }}%">
              </div>
            </div>
            <span class="progress_percentage">{{ progress }}%</span>
         </div>
        </div>
        <div class="col-lg-8 col-md-12">
          <div class="row">
            <div class="col-md-4">
              <div class="completed_container d-flex my-2 align-items-center">
                <span class="progress_icon">
                  <i class="fa fa-check-circle" aria-hidden="true"></i>
                </span>
                <span>{{# str}} course_completed, block_learning_progress {{/ str}}</span>
                <span class="value"> {{ course_completed_count }} </span>
              </div>
            </div>
            <div class="col-md-4 ">
              <div class="inprogress_container my-2 align-items-center">
                <span class="progress_icon ">
                  <i class="fa fa-television" aria-hidden="true"></i>
                </span>
                <span>{{# str}} in_progress_course, block_learning_progress {{/ str}}</span>
                <span class="value">{{ course_inprogresscount }}</span>
              </div>
            </div>
            <div class="col-md-4 action_btn_container">
              <a href="{{ know_more_url }}" class="btn my-2">{{# str }}viewmore, block_learning_progress{{/ str }}</a>
            </div>
          </div>
        </div>
      </div>
  </div>



