{{#response}}
    {{^records}}
    {{#nodata}}
        <div class = 'w-100 pull-left alert alert-info' style="color: #000000;">{{{nodata}}}</div>
        {{#js}}
            $( document ).ready(function() {
                $('.global_filter_structure_myenrolledcourses').css('display','none');
            });
        {{/js}}
    {{/nodata}}
    {{/records}}
    {{#viewtypeCard}}
        <ul class='card-wrap m-0 p-0 {{#records}}{{#action}}actions{{/action}}{{/records}}' data-region='paginate-list'>
            {{#records}}
                    <li class='  px-4 {{cardClass}} pull-left readymainContainer'>
                        <div id="course-{{courseid}}" class="col-md-12 col-12 readyCContainer pull-left catcourses_list active  crse-{{coursenums}}">
                            <div class="col-12 pull-left course_container readycourse_container">
                                <div class="courseimg_container col-12 p-0">
                                    <div style="background-image: url('{{{imageurl}}}');" alt="elearning" class="courseimg courseimg_bg"></div>
                                    <span class="{{^iconurl}}novisible{{/iconurl}} crse-icon crse-icon-course-type" style="background-image: url({{ iconurl }})"></span>
                                    <span class="{{^coursetype}}novisible{{/coursetype}}crse-s-type crse-s-type">{{ coursetype }}</span>
                                    {{#completiondeadline}}
                                    <span class="DlforCmp"> 
                                        <span>deadline for completion</span>
                                    <span class="dl_cpm_date text-center">{{completiondeadline}}</span> 
                                    </span>
                                    {{/completiondeadline}}
                                    {{#stripepayment}}
                                    <span class="leftStripePayment"> 
                                        <span class="pl-3 pr-4 StripePaymentft"> 
                                            <span><i class="fa fa-euro stripe_p_icon"></i></span> {{stripepayment}}
                                        </span> 
                                    </span>
                                    {{/stripepayment}}
                                </div>
                                <div class="readyCCnt coursecontent col-12 pull-left px-4">
                                    <div class="d-block w-full mt-2">
                                        <p class="course_name m-y-1"><a class="d-block" href="{{ url }}"title="{{ title }}">{{ title }}</a></p>
                                    </div>
                                    <div class="w-full pull-left">
                                        <div class="coursedesc w-full pull-left">
                                            {{# description }}
                                                <div class="desc" title = "Course Descripton" >{{{ description }}}</div>
                                            {{/ description }}
                                            {{^ description }}
                                                <p class="alert alert-info text-center mt-1">{{#str}}nocoursedesc, theme_versatile{{/str}}</p>
                                            {{/ description }}
                                        </div>
                                    </div>
                                </div>
                                <div class="cat_btmContainer col-12 mb-2 pt-2  pull-left px-3">
                                    <div class="w-full cat_btm">
                                        <span class="text-muted">Course Provided by<span class="mr-3 pl-2">:</span></span><span><img src="{{{course_provider}}}" height="50px" /></span>
                                    </div>
                                </div>
                                    <div class="cat_btmContainer col-12 mb-2 pt-2  pull-left px-3">
                                        <div class="w-full pull-left cat_btm">
                                            {{#duration }}
                                                <div class="col-lg-7 col-12 p-0 pull-left d-flex flex-row flex-wrap align-items-center">
                                                    <span class="text-muted pull-left catbtm_colon d-flex flex-row flex-wrap align-items-center"><span class="icon-clock-o"></span>{{# str }} duration, block_courselister {{/ str }} <span class="colon_align">:</span> </span><span class="text-muted catbtm_info" title="{{duration}}">{{ duration }}</span>
                                                </div>
                                            {{/duration }}
                                            {{#modules }}
                                                <div class="col-lg-5 col-12 p-0 pull-left d-flex flex-row flex-wrap align-items-center">
                                                    <span class="text-muted d-flex flex-row flex-wrap align-items-center justify-content-end">
                                                        {{ #assessment}}
                                                        <span class="icon-question"></span>
                                                        {{/assessment }}
                                                        {{ ^assessment}}
                                                        <span class="icon-window-restore"></span>
                                                        {{/assessment }}
                                                        {{ modstr }} 
                                                        <span class="colon_align">:</span> </span>
                                                    <span class="text-muted catbtm_info">{{ modules }}</span>
                                                </div>
                                            {{/modules }}
                                        </div>
                                    </div>
                                    <div class="cat_btmContainer col-12 mb-2 pt-2  pull-left d-flex justify-content-between align-items-center px-3">
                                        {{#selfcompletioncourse}}
                                        <div class="d-flex align-items-center">
                                            {{{selfcompletioncourse}}}
                                        </div>
                                        {{/selfcompletioncourse}}
                                    <!--  {{#browseevidencescourse}}
                                            <div class="ml-4">
                                                {{{browseevidencescourse}}}
                                            </div>
                                        {{/browseevidencescourse}} -->
                                        <div class="ml-auto">
                                            <a href="{{ url }}" class="btn">{{# str }}launch, block_userdashboard{{/ str }}</a>
                                        </div>
                                    </div>
                                    <!--<div class="cat_btmContainer crse-s-meta w-100 {{^completebefore}}novisible{{/completebefore}}">
                                        <i class="fa fa-calendar"></i> {{# str }} completebefore, block_courselister {{/ str }}: {{completebefore}}
                                    </div>-->
                                    <div class="cat_btmContainer crse-s-meta w-100 px-4">
                                        <div class="col-md-10 mx-auto d-flex flex-row align-items-center justify-content-center mr-2">
                                            <div class="progress readyprogress mr-3">
                                                <div class="progress-bar text-center" role="progressbar" style="width: {{ progress }}%;" aria-valuenow="{{ progress }}" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            <div class="prg-com-cnt"><span class="readyprogress-value mr-1">{{ progress }}% </span><span class="readyprogress-txt">{{#str}}Completed, local_learningplan {{/str}} </span></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
            {{/records}}
        </ul>
    {{/viewtypeCard}}
{{/response}}
